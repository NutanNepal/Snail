<resources>
    <style name="CustomTextToolbarTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/cmunbx</item>
        <item name="android:textColor">@color/lessCreamy</item>
        <item name="android:shadowColor">@color/launcher</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="CustomTextAppearanceBold">
